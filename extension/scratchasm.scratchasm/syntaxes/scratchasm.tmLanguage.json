{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ScratchASM",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#vars"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.scratchasm",
          "match": ";.*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.other.scratchasm",
          "match": "(?i)\\b([a-z])+\\b"
        }
      ]
    },
    "literals": {
      "name": "string.quoted.double.scratchasm",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.scratchasm",
          "match": "\\\\."
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.scratchasm",
          "match": "(\\*)"
        }
      ]
    },
    "vars": {
      "patterns": [
        {
          "name": "variable.other.scratchasm",
          "match": "(?i)\\B\\$[a-z0-9_]*"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.scratchasm",
          "match": "(?i)\\B\\@[a-z0-9_]*"
        }
      ]
    }
  },
  "scopeName": "source.ascm"
}
